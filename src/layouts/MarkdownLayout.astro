---
import Layout from '~/layouts/PageLayout.astro';

import type { MetaData } from '~/types';

export interface Props {
  frontmatter: {
    title?: string;
    author?: string;
    venue?: string;
    date?: string;
  };
}

const { frontmatter } = Astro.props;

const metadata: MetaData = {
  title: frontmatter?.title,
  author: frontmatter?.author,
  venue: frontmatter?.venue,
  date: frontmatter?.date,
};
---

<Layout metadata={metadata}>
  <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
    <h1
      class="font-bold font-heading text-4xl md:text-5xl leading-tighter tracking-tighter py-3 bg-gradient-to-r from-pink-500 via-purple-500 to-blue-500 bg-clip-text text-transparent"
    >
      {frontmatter.title}
    </h1>

    <h2 class="text-xl font-bold text-gray-800 dark:text-gray-300 mt-4">
      {frontmatter.author}
    </h2>

    {
      frontmatter.venue && frontmatter.date && (
        <p class="text-lg text-gray-600 dark:text-gray-400 mt-2">
          {frontmatter.venue}, {frontmatter.date}
        </p>
      )
    }

    <div
      class="mx-auto prose prose-lg max-w-4xl dark:prose-invert dark:prose-headings:text-slate-300 prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-img:rounded-md prose-img:shadow-lg mt-8"
    >
      <slot />
    </div>
  </section>
</Layout>
